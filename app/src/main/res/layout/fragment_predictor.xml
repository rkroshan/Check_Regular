<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.roshan_kumar.alternatingcurrent006.check_regular.timetable.Predictor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="The Predictor"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="(predict the no of classes you have to attend further)"
        android:textAppearance="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Classes Atteneded "
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/attend1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:inputType="number"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Total Classes"
            android:layout_marginBottom="8dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/total1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:inputType="number"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/predict"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="predict"
        android:backgroundTint="@color/button"
        android:textColor="#000"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="75%"
        android:textSize="40dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/predict_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Be Regular"
        android:gravity="center"
        android:textColor="#f00"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/future_predict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:gravity="center"
        tools:text="You have to attend \n5 \nupcoming classes regulary..."
        android:layout_marginBottom="8dp"/>

</LinearLayout>